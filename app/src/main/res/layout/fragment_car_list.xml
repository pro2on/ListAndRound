<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/fragment_car_list_carListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fragmetn_car_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        fab:fab_colorNormal="#ff2bcf6d"
        fab:fab_colorPressed="#ff136132"
        fab:fab_colorRipple="#ff40cf57" />

    <TextView android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/fragment_car_list_empty" />

</FrameLayout>